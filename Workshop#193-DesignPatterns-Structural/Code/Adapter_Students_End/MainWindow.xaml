<Window x:Class="Adapter_Students_End.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adapter_Students_End"
        mc:Ignorable="d"
        Title="Display Students" Height="450" Width="800">
    <ListView Name="listViewStudents">
        <ListView.View>
            <GridView>
                <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Path=Id}"/>
                <GridViewColumn Header="First Name" DisplayMemberBinding="{Binding Path=Name}"/>
                <GridViewColumn Header="Last Name" DisplayMemberBinding="{Binding Path=Surname}"/>
            </GridView>
        </ListView.View>
    </ListView>
</Window>
